vim.keymap.set("n", "<leader>-", function()

local parent_win = vim.api.nvim_get_current_win()

local tmpfile = vim.fn.tempname() .. ".yazi"

local buf = vim.api.nvim_create_buf(false, true)



local width = math.floor(vim.o.columns * 0.9)

local height = math.floor(vim.o.lines * 0.9)

local row = math.floor((vim.o.lines - height) / 2)

local col = math.floor((vim.o.columns - width) / 2)



local win = vim.api.nvim_open_win(buf, true, {

relative = "editor",

row = row, col = col, width = width, height = height,

style = "minimal", border = "rounded",

})



-- run yazi with a chooser that writes the selection path to tmpfile

-- (use whatever args you already had working)

vim.fn.termopen({ "yazi", "--chooser-file", tmpfile }, {

on_exit = function()

-- close float first & restore focus to parent window

pcall(vim.api.nvim_win_close, win, true)

if vim.api.nvim_win_is_valid(parent_win) then

pcall(vim.api.nvim_set_current_win, parent_win)

end



-- open the selected file on the next tick to avoid race conditions

vim.schedule(function()

if vim.loop.fs_stat(tmpfile) then

local lines = vim.fn.readfile(tmpfile)

-- handle multi-select; open the first for now

local sel = (lines[1] or ""):gsub("^%s+", ""):gsub("%s+$", "")

if #sel > 0 then

-- if it's a directory, open yazi's dir in nvim; else edit file

local stat = vim.loop.fs_stat(sel)

if stat and stat.type == "directory" then

vim.cmd("cd " .. vim.fn.fnameescape(sel))

-- optional: open mini.files/snacks.picker here if you want

require("mini.files").open(sel, true)

else

vim.cmd.edit(vim.fn.fnameescape(sel))

end

end

pcall(vim.loop.fs_unlink, tmpfile)

end

end)

end,

})



vim.cmd.startinsert()

