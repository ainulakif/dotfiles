local function on_attach(_, bufnr)

local o = { buffer = bufnr, silent = true }

local function goto_first_definition()

local params = vim.lsp.util.make_position_params()

vim.lsp.buf_request_all(0, "textDocument/definition", params, function(results)

local all = {}

local function normalize(result) return (type(result) == "table" and result[1]) and result or { result } end

for _, res in pairs(results) do

if res and res.result then

for _, loc in ipairs(normalize(res.result)) do

local uri = loc.uri or loc.targetUri

if type(uri) == "string" and uri:match("^file://") then

table.insert(all, loc)

end

end

end

end

if #all > 0 then vim.lsp.util.jump_to_location(all[1], "utf-8", true) end

end)

end



vim.keymap.set("n", "gd", goto_first_definition, o)

