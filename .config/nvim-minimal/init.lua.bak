-- Helper: pick most severe diagnostic on the current line, return hl group + text

local function _diag_line_text(maxlen)

local line = vim.api.nvim_win_get_cursor(0)[1] - 1

local diags = vim.diagnostic.get(0, { lnum = line })

if #diags == 0 then return nil end



-- Pick the most severe (lower number = higher severity)

table.sort(diags, function(a, b) return a.severity < b.severity end)

local d = diags[1]



local hl_by_sev = {

[vim.diagnostic.severity.ERROR] = "DiagnosticError",

[vim.diagnostic.severity.WARN] = "DiagnosticWarn",

[vim.diagnostic.severity.INFO] = "DiagnosticInfo",

[vim.diagnostic.severity.HINT] = "DiagnosticHint",

}



local msg = d.message:gsub("\n", " ")

maxlen = maxlen or 80

if vim.fn.strdisplaywidth(msg) > maxlen then

msg = vim.fn.strcharpart(msg, 0, maxlen) .. "…"

end



return hl_by_sev[d.severity] or "StatusLine", msg

end



-- Public: used by statusline

function _G.diag_or_path()

-- Try diagnostic first

local hl, text = _diag_line_text(80)

if hl and text and #text > 0 then

-- Switch to the diagnostic highlight, print text, then reset (%*)

return table.concat({ "%#", hl, "#", " ", text, " ", "%*" })

end

-- Fallback: default filepath

return "%f"

end



-- Counts only (for right side of statusline)

function _G.diag_counts()

local diags = vim.diagnostic.get(0) -- all diagnostics in current buffer

local counts = {

[vim.diagnostic.severity.ERROR] = 0,

[vim.diagnostic.severity.WARN] = 0,

[vim.diagnostic.severity.INFO] = 0,

[vim.diagnostic.severity.HINT] = 0,

}



for _, d in ipairs(diags) do

counts[d.severity] = counts[d.severity] + 1

end



local parts = {}

if counts[vim.diagnostic.severity.ERROR] > 0 then

table.insert(parts, "E:" .. counts[vim.diagnostic.severity.ERROR])

end

if counts[vim.diagnostic.severity.WARN] > 0 then

table.insert(parts, "W:" .. counts[vim.diagnostic.severity.WARN])

end

if counts[vim.diagnostic.severity.INFO] > 0 then

table.insert(parts, "I:" .. counts[vim.diagnostic.severity.INFO])

end

if counts[vim.diagnostic.severity.HINT] > 0 then

table.insert(parts, "H:" .. counts[vim.diagnostic.severity.HINT])

end



return table.concat(parts, " ")

end



-- Set a simple statusline that starts with our diag text OR filepath.

-- (Right side shows line:col and percent through file)

-- Statusline: left = diag_or_path(), right = counts + line/col/percent

vim.o.statusline = "%{%v:lua.diag_or_path()%} %=%{%v:lua.diag_counts()%} %l:%c %p%%"



-- Keep it live: redraw when diagnostics or cursor move

vim.api.nvim_create_autocmd({ "DiagnosticChanged", "CursorMoved", "CursorHold", "InsertLeave" }, {

callback = function() vim.cmd("redrawstatus") end,

})



